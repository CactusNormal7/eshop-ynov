@page "/products"
@using Frontend.Web.Models
@inject IHttpClientFactory ClientFactory

<PageTitle>Products</PageTitle>

<h1>Products</h1>

<div class="mb-3">
    <label class="form-label">Page Number</label>
    <input type="number" class="form-control" style="max-width:200px" @bind-value="pageNumber" min="1" />
</div>
<div class="mb-3">
    <label class="form-label">Page Size</label>
    <input type="number" class="form-control" style="max-width:200px" @bind-value="pageSize" min="1" />
</div>
<button class="btn btn-primary me-2" @onclick="LoadProducts">Load</button>
@if (error is not null)
{
    <div class="alert alert-danger mt-3">@error</div>
}

@if (result is null)
{
    <p class="text-muted">No data loaded yet.</p>
}
else
{
    <p>Showing page @result.PageIndex of @totalPages (total @result.TotalCount items)</p>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th class="text-end">Price</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var p in result.Data)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Category</td>
                <td class="text-end">@p.Price.ToString("C")</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private int pageNumber = 1;
    private int pageSize = 10;
    private PaginatedResult<ProductDto>? result;
    private string? error;

    private int totalPages => result is null || result.PageSize == 0
        ? 0
        : (int)Math.Ceiling((double)result.TotalCount / result.PageSize);

    private async Task LoadProducts()
    {
        error = null;
        try
        {
            var client = ClientFactory.CreateClient("CatalogApi");
            var url = $"/Products?pageNumber={pageNumber}&pageSize={pageSize}";
            result = await client.GetFromJsonAsync<PaginatedResult<ProductDto>>(url);
        }
        catch (Exception ex)
        {
            error = $"Failed to load products: {ex.Message}";
        }
    }
}